<?xml version="1.0" encoding="utf-8"?>
<RecipeDefs>
  <RecipeDef Name="SurgeryOrphan" ParentName="SurgeryFlesh" Abstract="True">
    <!-- Easy recipe the skill of the colonist and quality/cleanliness of the room should not matters that much -->
    <surgeonSurgerySuccessChanceExponent>0.9</surgeonSurgerySuccessChanceExponent>
    <roomSurgerySuccessChanceFactorExponent>0.9</roomSurgerySuccessChanceFactorExponent>
    <surgerySuccessChanceFactor>1.25</surgerySuccessChanceFactor>
    <deathOnFailedSurgeryChance>0.03</deathOnFailedSurgeryChance>
    <workAmount>2000</workAmount>
    <recipeUsers>
      <li>Orphan</li>
    </recipeUsers>
    <skillRequirements>
      <li>
        <skill>Medicine</skill>
        <minLevel>7</minLevel>
      </li>
    </skillRequirements>
  </RecipeDef>
  <!-- Injury: Burn -->
  <RecipeDef ParentName="SurgeryOrphan">
    <defName>CureInjuryBurnOrphan</defName>
    <label>cure burn</label>
    <description>Cure burn.</description>
    <workerClass>Recipe_RemoveHediff</workerClass>
    <successfullyRemovedHediffMessage>{0} has successfully treated {1}'s burn.</successfullyRemovedHediffMessage>
    <jobString>Curing burn.</jobString>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
    </fixedIngredientFilter>
    <removesHediff>Burn</removesHediff>
  </RecipeDef>
